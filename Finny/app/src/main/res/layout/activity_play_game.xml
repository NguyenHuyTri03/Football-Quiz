<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".PlayGame"
    android:background="@color/bg_main">



    <Button
        android:id="@+id/exitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_close"
        android:text=""
        app:backgroundTint="@color/transparent"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.041" />



    <TextView
        android:id="@+id/questionQuant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Question 1/5"
        android:textColor="@color/text_main"
        android:fontFamily="@font/fredoka_medium"
        android:textStyle="normal"
        android:textSize="25dp"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="1dp"
        android:autoSizeMaxTextSize="200dp"
        android:textAlignment="center"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintHorizontal_bias="0.5"
        />

    <TextView
        android:id="@+id/questionTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:text="Question goes here"
        android:textColor="@color/text_main"
        android:fontFamily="@font/fredoka_medium"
        android:textStyle="normal"
        android:textSize="30dp"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="1dp"
        android:autoSizeMaxTextSize="200dp"
        android:textAlignment="center"
        android:paddingHorizontal="20dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.18"
        android:layout_marginVertical="10dp"
        />

    <Button
        android:id="@+id/option1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="5dp"
        android:background="@drawable/btn_rounded"
        app:backgroundTint="@color/fade"
        android:textColor="@color/text_main"
        android:fontFamily="@font/fredoka_medium"
        android:textStyle="normal"
        android:textAllCaps="false"

        android:text="option1"
        android:textSize="20dp"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="1dp"
        android:autoSizeMaxTextSize="200dp"

        app:layout_constraintDimensionRatio="6.5:1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.66"
        android:layout_marginVertical="10dp"
        />

    <Button
        android:id="@+id/option2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="5dp"
        android:background="@drawable/btn_rounded"
        app:backgroundTint="@color/fade"
        android:textColor="@color/text_main"
        android:fontFamily="@font/fredoka_medium"
        android:textStyle="normal"
        android:textAllCaps="false"

        android:text="option2"
        android:textSize="20dp"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="1dp"
        android:autoSizeMaxTextSize="200dp"

        app:layout_constraintDimensionRatio="6.5:1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.74"
        android:layout_marginVertical="10dp"
        />

    <Button
        android:id="@+id/option3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="5dp"
        android:background="@drawable/btn_rounded"
        app:backgroundTint="@color/fade"
        android:textColor="@color/text_main"
        android:fontFamily="@font/fredoka_medium"
        android:textStyle="normal"
        android:textAllCaps="false"

        android:text="option3"
        android:textSize="20dp"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="1dp"
        android:autoSizeMaxTextSize="200dp"

        app:layout_constraintDimensionRatio="6.5:1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.82"
        android:layout_marginVertical="10dp"
        />

    <Button
        android:id="@+id/option4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="5dp"
        android:background="@drawable/btn_rounded"
        app:backgroundTint="@color/fade"
        android:textColor="@color/text_main"
        android:fontFamily="@font/fredoka_medium"
        android:textStyle="normal"
        android:textAllCaps="false"

        android:text="option4"
        android:textSize="20dp"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="1dp"
        android:autoSizeMaxTextSize="200dp"

        app:layout_constraintDimensionRatio="6.5:1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9"
        android:layout_marginVertical="10dp"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:indeterminate="false"

        app:layout_constraintDimensionRatio="20:1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.12"
        android:progressDrawable="@drawable/progress_bar"
        />
</androidx.constraintlayout.widget.ConstraintLayout>